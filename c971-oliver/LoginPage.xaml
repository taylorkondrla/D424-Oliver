<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="c971_oliver.LoginPage"
             Title="Login">
    <StackLayout Padding="20" VerticalOptions="CenterAndExpand" Spacing="15">
        <Label Text="Log In"
               FontSize="Large"
               HorizontalOptions="Center" />

        <Label Text="Username:" />
        <Entry x:Name="UsernameEntry" Placeholder="Enter username" />

        <Label Text="Password:" />
        <Entry x:Name="PasswordEntry" Placeholder="Enter password" IsPassword="True" />

        <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Spacing="20">
            <Button Text="Login" Clicked="OnLoginClicked" />
            <Button Text="Register" Clicked="OnRegisterClicked" />
        </StackLayout>

        <Label x:Name="ErrorLabel" TextColor="Red" IsVisible="False" HorizontalOptions="Center" />
    </StackLayout>
</ContentPage>
